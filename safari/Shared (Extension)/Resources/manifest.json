{
  "name": "IPvFoo",
  "manifest_version": 3,
  "version": "2.27",
  "description": "Display the server IP address, with a realtime summary of IPv4, IPv6, and HTTPS information across all page elements.",
  "homepage_url": "https://github.com/pmarks-net/ipvfoo",
  "icons": {
    "16": "icon16.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["iputil.js", "common.js", "background.js"]
  },
  "action": {
    "default_icon": {
      "16": "icon16_transparent.png"
    }
  },
  "page_action": {
    "default_icon": {
      "16": "icon16_transparent.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": false
  },
  "permissions": [
    "contextMenus",
    "storage",
    "webNavigation",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}
